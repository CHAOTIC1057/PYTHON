import streamlit as st

st.title("Simple Calculator")

st.write("Enter two numbers below:")

# Input fields
num1 = st.text_input("First Number")
num2 = st.text_input("Second Number")

# Function to check valid number
def to_number(value):
    try:
        return float(value)
    except ValueError:
        return None

# Convert inputs
n1 = to_number(num1)
n2 = to_number(num2)

if st.button("Calculate"):
    if n1 is None or n2 is None:
        st.error("❌ Please enter valid numbers only.")
    else:
        st.success("✔️ Calculation Successful")

        # Perform operations
        st.write("### Results:")
        st.write(f"**Addition:** {n1 + n2}")
        st.write(f"**Subtraction:** {n1 - n2}")
        st.write(f"**Multiplication:** {n1 * n2}")

        # Handle division by zero
        if n2 == 0:
            st.write("**Division:** ❌ Cannot divide by zero")
        else:
            st.write(f"**Division:** {n1 / n2}")
